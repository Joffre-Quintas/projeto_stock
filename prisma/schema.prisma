generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Address {
  id               Int            @id @default(autoincrement())
  state            String         @db.VarChar(2)
  city             String         @db.VarChar(30)
  neighborhood     String         @db.VarChar(30)
  street           String         @db.VarChar(30)
  number           Int 
  Complement       String?
  unit             Unit?

  @@map("addresses")
}
model Unit {
  id               Int            @id @default(autoincrement())
  name             String         @db.VarChar(30)
  address          Address?       @relation(fields: [address_id], references: [id])
  address_id       Int            @unique      
  product          Product[]

  @@map("units")     
}

model Product {
  codProduct       Int            @id @default(autoincrement()) 
  name             String         @db.VarChar(30)
  slugName         String         @unique @map("slug_name")
  quantity         Int            @db.Integer
  price            Int            @db.Integer
  createdAt        DateTime       @map("created_at")
  updateAt         DateTime       @map("update_at")
  unit             Unit[]
}

model Employee {
  cod_employee     Int            @id @default(autoincrement())
  fullName         String         @map("full_name") @db.VarChar(30)
  hireDate         DateTime       @map("hire_date") 
  office           String         @db.VarChar(30)

  @@map("employees")
}